<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Pictures/bukadiri.ico" rel="shortcut icon" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/DataTables/media/css/jquery.dataTables.min.css" rel=" stylesheet" />
    <style type="text/css">
        .box {
            height: 150px;
            width: 150px;
            background: orange;
            display: none;
        }

        /*ini buat ngubah ukuran modal*/
        .modal-lg {
            max-width: 1370px;
            margin: auto;
        }

        th {
            background-color: crimson;
            color: white;
        }

        thead {
            text-align : center
        }

        divkiri {
            float: left;
            width: 50%;
            height: 50px;
        }

        divkanan {
            float: right;
            width: 50%;
            height: 50px;
        }
    </style>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mutia Shafira Chairunisa</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/DataTables/media/js/jquery.dataTables.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>